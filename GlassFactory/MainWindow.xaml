<Window x:Class="GlassFactory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlassFactory"
        mc:Ignorable="d"
        Title="Стекольное производство" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem x:Name="aboutMenuItem" Header="О программе" Height="25" Click="aboutMenuItem_Click"></MenuItem>
        </Menu>
        <Button x:Name="simplexButton" Content="Симплекс-метод" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Height="50" Margin="0 -150 0 0" Click="simplexButton_Click"/>
        <Button x:Name="transportButton" Content="Транспортная задача" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Height="50" Margin="0 150 0 0" Click="transportButton_Click"/>
    </Grid>
</Window>
